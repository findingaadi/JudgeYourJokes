@model IEnumerable<JudgeYourJokes.Models.Jokes>
@{
	ViewData["Title"] = "Jokes List";
}

<h2> All Jokes </h2>

<Table>
	<tr>
		<th>Title</th>
		<th>Joke</th>
		<th>User</th>
		<th>Votes</th>
		<th>Date</th>
		<th>Vote</th>
	</tr>
@foreach (var joke in Model)
{
	<tr>
		<td>@joke.JokeTitle</td>
		<td>@joke.JokeDescription</td>
		<td>@(joke.User?.UserName ?? "Unknown")</td>
		<td>@joke.Votes</td>
		<td>@joke.Date.ToShortDateString()</td>
		<td>    <form asp-action="Upvote" asp-route-id="@joke.Id" method="post" style="display:inline">
					<button type="submit">Upvote</button>
				</form>
		</td>
	</tr>
}
</Table>